<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RecyclerTableView">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RecyclerTableView.ColumnFixedSize">
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RecyclerTableView.HeaderFixedSize">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <style name="RecyclerTableView.HeaderFixedSize.Tall" parent="RecyclerTableView.HeaderFixedSize">
        <item name="android:layout_height">42dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

</resources>